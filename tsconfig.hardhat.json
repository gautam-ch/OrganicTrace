{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node",
      "mocha",
      "chai",
      "hardhat",
      "@nomicfoundation/hardhat-chai-matchers"
    ],
    "outDir": ".hh-tsbuild"
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "typechain-types/**/*.d.ts",
    "typechain-types/**/*.ts"
  ]
}
